@model ViewModels.CarrinhoCompraViewModel
<div class="row checkoutForm">
    <h2>Seu carrinho de compras</h2>
    <h4>Aqui estão os seus pedidos</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">SubTotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="texte-center">@item.Quantidade</td>
                        <td class="texte-center">@item.Lanche.LancheNome</td>
                        <td class="texte-center">@item.Lanche.Preco.ToString("c")</td>
                        <td class="texte-center">@item.
                            @((item.Quantidade * item.Lanche.Preco).ToString("c"))
                        </td>]
                        <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove"></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total</td>
                    <td class="text-right">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>   
        <div class="text text-right">
            <div class="btn-group">
                <a class = "btn-btn-success" asp-controller = "Pedido" asp-action = "Checkout">Finalizar Pedido</a>
                <a class="btn-group">
                    <a class="btn btn-default dropdown-toggle" data-toggle = "dropdown">
                        Adicionar mais lanches<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a asp-controller = "Lanche"  asp-action = "List" asp-route-categoria = "Fast-Food">Fast-Food</a></li>
                        <li><a asp-controller = "Lanche"  asp-action = "List" asp-route-categoria = "Kakes">Kakes</a></li>
                    </ul>
                </a>
            </div>
        </div>  
</div>